load(
    "//ign_bazel:cmake_configure_file.bzl",
    "cmake_configure_file",
)

BINARY_DIR = "/tmp"
SOURCE_DIR = "/tmp"
CMAKE_BINARY_DIR = "./ign_rendering/ogre2"

# Generates config.hh based on the version numbers in CMake code.
cmake_configure_file(
    name = "test_config",
    src = "test_config.h.in",
    out = "test_config.h",
    cmakelists = ["CMakeLists.txt"],
    defines = [
        "PROJECT_BINARY_DIR=%s" % (BINARY_DIR),
        "PROJECT_SOURCE_DIR=%s" % (SOURCE_DIR),
        "CMAKE_BINARY_DIR=%s" % (CMAKE_BINARY_DIR),
    ],
    visibility = ["//visibility:private"],
)

cc_library(
    name = "test_utils",
    srcs = ["test_config.h"],
    includes = ["."],
    visibility = ["//visibility:public"],
)

[
    cc_test(
        name = "INTEGRATION_" + test.split('/')[1].replace('.cc', ''),
        srcs = [ test ],
        deps = [
          "//ign_rendering",
          ":test_utils",
          "@gtest//:gtest",
          "@gtest//:gtest_main",
        ],
        includes = [".", "integration"],
    ) for test in glob(["integration/*.cc"])
]
